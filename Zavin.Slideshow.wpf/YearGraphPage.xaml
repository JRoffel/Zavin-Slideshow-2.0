<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zavin.Slideshow.wpf"
      xmlns:DV="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
      xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" x:Name="YearGraphPage1" x:Class="Zavin.Slideshow.wpf.YearGraphPage"
      mc:Ignorable="d" 
      Title="YearReviewPage"
      Background="White"
      Loaded="LoadPieChartData">
    <Grid>
        <!-- <Grid.Resources>
            <SolidColorBrush x:Key="CustomBrush" Color="Navy"></SolidColorBrush>
            <SolidColorBrush x:Key="CustomBrush2" Color="White"></SolidColorBrush>
            <SolidColorBrush x:Key="CustomBrush3" Color="Green"></SolidColorBrush>
         </Grid.Resources> -->
        <Grid.Resources>
            <DV:ResourceDictionaryCollection x:Key="Cookie">
                <ResourceDictionary>
                    <Style x:Key="DataPointStyle" TargetType="Control">
                        <Setter Property="Background" Value="Navy"></Setter>
                    </Style>
                </ResourceDictionary>
                <ResourceDictionary>
                    <Style x:Key="DataPointStyle" TargetType="Control">
                        <Setter Property="Background" Value="White"></Setter>
                    </Style>
                </ResourceDictionary>
                <ResourceDictionary>
                    <Style x:Key="DataPointStyle" TargetType="Control">
                        <Setter Property="Background" Value="Green"></Setter>
                    </Style>
                </ResourceDictionary>
            </DV:ResourceDictionaryCollection>
        </Grid.Resources>
        <chartingToolkit:Chart Name="PieChart" Title="PieGraph1" Palette="{StaticResource Cookie}">
            <chartingToolkit:Chart.Series>
                <chartingToolkit:PieSeries x:Name="Slice1" Title="PieGraph1" IndependentValueBinding="{Binding Path=Key}" DependentValueBinding="{Binding Path=Value}" AnimationSequence="FirstToLast">
                    <!--<chartingToolkit:PieSeries.DataPointStyle>
                        <Style TargetType="chartingToolkit:PieDataPoint">
                            <Setter Property="Background" Value="Navy"/>
                            <Setter Property="Background" Value="Green"/>
                        </Style>
                    </chartingToolkit:PieSeries.DataPointStyle>-->
                </chartingToolkit:PieSeries>
            </chartingToolkit:Chart.Series>
        </chartingToolkit:Chart>
    </Grid>
</Page>
